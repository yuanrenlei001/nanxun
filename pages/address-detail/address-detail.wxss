.swipers {width: 100%;height:386rpx;position: relative;z-index: 1;}
.swipers image {width: 100%;height:386rpx;}
.swipers .wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: 36rpx;
}
page {background-color: #ededed;}
.main {background: #fff;position: relative;
  top:-34rpx;
  z-index: 2;
  min-height:500rpx;
  border-radius: 32rpx;
  padding: 60rpx;
  width: 80%;
  margin-left: 18rpx;
}
.title {position: relative;width: 100%;}
.title image {width:16rpx;height:16rpx;margin-right: 8rpx;vertical-align: middle;}
.title01 {font-size: 36rpx;color: #000;width: 50%;
  white-space:nowrap; 
  text-overflow:ellipsis; 
  -o-text-overflow:ellipsis; 
  overflow: hidden;
}
.title04 {font-size: 28rpx;color: #666;width: 70%;
  white-space:nowrap; 
  text-overflow:ellipsis; 
  -o-text-overflow:ellipsis; 
  overflow: hidden;
  font-weight: 500;
}
.title02 {font-size: 20rpx;color: #333;margin-right: 50rpx;
  position: absolute;
  right:100rpx;
  top:5rpx;
}
.title03 {font-size: 20rpx;color: #333;
  position: absolute;
  right:0;
  top:5rpx;
  width: 108rpx;
  height:34rpx;
  text-align: center;
  line-height: 34rpx;
  background: #45ADDD;
  color: #fff;
  border-radius: 17rpx;
}
.title03 image { width: 24rpx;
  height:30rpx;}
.text {
  font-size: 28rpx;color: #666;
  margin: 8rpx 0 10rpx 0;
}
audio {

  width: 100%;

  display: flex;

  flex-direction: column;
  margin: 36rpx 0;

}
.content {
font-size: 24rpx;
font-weight: 300;
color: #333333;
line-height: 38rpx;
text-align: justify;
margin-top: 18rpx;
}
.bottom {margin-top: 50rpx;}
.bottom image {
  width:32rpx;height:32rpx;margin-right: 16rpx;vertical-align: sub;
}
.bottom view {float:left;width: 33.33%;}
.bottom01 {text-align: left;}
.bottom02 {text-align: center;}
.bottom03 {text-align: right;}