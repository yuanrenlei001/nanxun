  <text>天气</text>
  <view class="search">
    <input type="text" />
    <image src="/images/index/search.png"></image>
  </view>
  <view class="service"><image src="/images/index/service.png"></image></view>
</view>

<!-- 视频 -->
<view class="video">
  <video 
      id="myVideo" 
      src="https://nanxun.zjtoprs.com/minio/old-town/com/info/propagandafilm1.mp4" 
      enable-danmu 
      danmu-btn 
      controls 
      object-fit="cover"
      poster="/images/xxx.jpg"
    ></video>
</view>

<!-- 外部容器 -->
<view class="main">
  <!-- 最新公告 -->
  <view class="news" bindtap="goNotice">
    <image src="/images/index/iconNews.png"></image> 最新公告： <text>南浔古镇部分景区维修中,具体景点如南浔古镇部分景区维修中,具体景点如</text>
  </view>
  <!-- 分类列表 -->
  <view class="indexSort">
    <view class="sortTop">
      <text class="sortTop01">乐游南浔</text>
      <!-- <view class="sortTop02">查看全部 <image src="/images/index/iconRight.png"></image></view> -->
    </view>
    <view class="sort">
      <view class="sortUl">
        <navigator class="sortLi" target="miniProgram" open-type="navigate" app-id="wx0e6ed4f51db9d078" version="trial"><image src="/images/index/icon01.png"></image> <text>门票商城</text></navigator>
        <navigator class="sortLi" url='/pages/tourist-guide/tourist-guide'><image src="/images/index/icon02.png"></image> <text>美景导游</text></navigator>
        <navigator class="sortLi" url='/pages/food/food'><image src="/images/index/icon03.png"></image> <text>美食餐饮</text></navigator>
        <navigator class="sortLi" url='/pages/specialty/specialty'><image src="/images/index/icon04.png"></image> <text>南浔特产</text></navigator>
        <navigator class="sortLi"><image src="/images/index/icon05.png"></image> <text>酒店民宿</text></navigator>
        <navigator class="sortLi" url='/pages/ar/ar'><image src="/images/index/icon06.png"></image> <text>AR看史</text></navigator>
        <navigator class="sortLi" url='/pages/vr/vr'><image src="/images/index/icon07.png"></image> <text>VR看景</text></navigator>
        <navigator class="sortLi" url='/pages/for-strategy/index' open-type="switchTab"><image src="/images/index/icon08.png"></image> <text>游玩攻略</text></navigator>
        <navigator class="sortLi" url='/pages/show-list/show-list'><image src="/images/index/icon09.png"></image> <text>活动演出</text></navigator>
        <navigator class="sortLi" url="/pages/index-more/index-more"><image src="/images/index/icon10.png"></image> <text>更多</text></navigator>
      </view>
    </view>  
  </view>

</view>
  <!-- 地图导览 -->
  <navigator class="indexMap">
    <text>地图导览</text>
    <image src="/images/index/indexMap.png"></image>
  </navigator>

<view class="main">
  <!-- 最新资讯 -->
  <view class="indexNews">
    <view class="sortTop">
      <text class="sortTop01">最新资讯</text>
      <view class="sortTop02" bindtap="noticeList">查看全部 <image src="/images/index/iconRight.png"></image></view>
    </view> 
    <view class="newImg">
      <image src="/images/xxx.jpg"></image>
      <text>南浔新增写生基地</text>
    </view>
  </view>

  <!-- 热门景点 -->
  <view class="indexJd">
    <view class="sortTop">
      <text class="sortTop01">热门景点</text>
      <view class="sortTop02" bindtap="goScenic">查看全部 <image src="/images/index/iconRight.png"></image></view>
    </view> 
    <swiper class="swiperContent" previous-margin='50px' next-margin='50px' bindchange="swiperChange"  autoplay circular>
      <swiper-item wx:for='{{imgList}}' >
        <image bindtap="goscenic" data-id='{{item.id}}' class='le-img {{nowIdx==index?"le-active":""}}' src='{{url+item.pictureUrl}}'></image>
      </swiper-item>
    </swiper>
    <view class="text">
      <view class="swTitle">{{titles}}</view>
      <view class="swText">{{texts}}</view>
    </view>
  </view>

  <!-- 演出列表 -->
  <view class="indexList">
    <view class="sortTop">
      <text class="sortTop01">必看演出</text>
      <view class="sortTop02" bindtap="showList">查看全部 <image src="/images/index/iconRight.png"></image></view>
    </view> 
    <view class="list">
      <view class="listUl">
        <navigator class="listLi" url="/pages/show-detail/show-detail?id={{item.id}}" wx:for="{{showLists}}"><image src="{{url+item.coverUrl}}"></image> <text>{{item.name}}</text></navigator>
      </view>
    </view>
  </view>
</view>
