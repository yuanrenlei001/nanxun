page{
  background-color: #f2f2f2;
}
.top {height: 104rpx;width: 100%;line-height: 104rpx;position: relative;}
.address {width: 48rpx;height:48rpx;vertical-align: middle;margin-left: 22rpx;}
.service {position: absolute;top:0;right:36rpx;height:100%;}
.service image {width: 52rpx;height:52rpx;vertical-align: middle;}
.search {width:346rpx;height:54rpx;line-height: 54rpx;position: absolute;left:210rpx;top:50%;margin-top: -27rpx;
  background: #fff;
  box-shadow: 0px 4px 8px 0px rgba(217, 216, 216, 0.5);
  border-radius: 57px;
  padding-left: 80rpx;
  font-size: 24rpx;
  color: #333;
}
.search image {width:30rpx;height:30rpx;position: absolute;top:50%;left:26rpx;margin-top: -15rpx;}
.video {width: 100%;height:360rpx;}
.video video {width: 100%;height:360rpx;}
.main {padding: 0 16rpx;}
.news {
  width: 658rpx;
height: 66rpx;
background: linear-gradient(160deg, #56A9EB 0%, #5463DA 100%);
border-radius: 12px;
margin: 20rpx 0;
font-size: 24rpx;color: #fff;line-height: 66rpx;
padding-left: 60rpx;
}

.news text {font-size: 20rpx;
  white-space:nowrap; 
  text-overflow:ellipsis; 
  -o-text-overflow:ellipsis; 
  overflow: hidden;
  width: 60%;
  display: block;
  float:right;
  margin-right: 100rpx;
}
.news image {width: 32rpx; height: 32rpx;margin-right: 12rpx;vertical-align: sub;margin-left: -20rpx;}
.indexSort {height:426rpx;
  background: #FFFFFF;
  box-shadow: 0px 4px 12px 0px rgba(217, 216, 216, 0.5);
  overflow: hidden;
  border-radius: 12px;}

.sortTop {height:94rpx;line-height: 94rpx;}
.sortTop01 {font-size: 32rpx;color: #333;margin-left: 30rpx;font-weight: 500;}
.sortTop02 {float:right;

  font-size: 20rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 0.42);
  margin-right: 30rpx;
}
.sortTop02 image {width: 32rpx; height: 32rpx;vertical-align: sub;}
.sort {width: 100%;padding: 0 24rpx;font-size: 20rpx;color: #333;position: relative;overflow: hidden;}
.sort image {width:100rpx;height:100rpx;}
.sortUl {width: 110%;position: relative;overflow: hidden;}
.sortLi {display: block;width:100rpx;margin-right: 46rpx;float:left;margin-bottom: 30rpx;text-align: center;}
.indexMap {width: 100%;height:158rpx;position: relative;margin-top: 10rpx;}
.indexMap image {width: 100%;height: 100%;}
.indexMap text {position: absolute;font-size: 32rpx;color: #333;top:54rpx;left:56rpx;font-weight: 600;}
.indexNews {
  height:332rpx;
  background: #FFFFFF;
  box-shadow: 0px 4px 12px 0px rgba(217, 216, 216, 0.5);
  border-radius: 12px;
  padding: 0 34rpx;
}
.indexJd {
  height:526rpx;
  background: #FFFFFF;
  box-shadow: 0px 4px 12px 0px rgba(217, 216, 216, 0.5);
  border-radius: 12px;
  padding: 0 34rpx;
  margin-top: 20rpx;
}
.indexNews .newImg {
  width: 100%;
  height:218rpx;
  border-radius: 12rpx;
  position: relative;
  overflow: hidden;
}
.newImg image {
  width: 100%;
  height:218rpx;
}
.newImg text {display: block;position: absolute;bottom:0;left:0;width: 100%;height:62rpx;line-height: 62rpx;
  background: rgba(0,0,0,.5);color: #fff;font-size: 20rpx;padding-left: 24rpx;
}
.indexList {
  background: #FFFFFF;
  box-shadow: 0px 4px 12px 0px rgba(217, 216, 216, 0.5);
  border-radius: 12px;
  padding: 0 34rpx;
  margin-top: 20rpx;
  overflow: hidden;
  margin-bottom: 150rpx;
}
.list {width: 100%;padding: 0 0 80rpx 0;font-size: 20rpx;color: #333;position: relative;overflow: hidden;}
.list image {width:317rpx;height:256rpx;}
.listUl {width: 110%;position: relative;overflow: hidden;}
.listLi {display: block;width:317rpx;height:324rpx;margin-right: 24rpx;float:left;text-align: center;
  border-top-left-radius: 12rpx;border-top-right-radius: 12rpx;
}
.listLi text {line-height: 68rpx;color: #333;font-size: 24rpx;}
.le-img {
  width: 100%;
  height:210rpx;
  display: block;
  transform: scale(0.8);
  transition: all 0.3s ease;
  border-radius: 6px;
}
.le-img.le-active {
  transform: scale(1);
}
.swiperContent {height:210rpx;}
.swiperContent text {padding: 0 48rpx;}
.swTitle {color: #333;line-height: 80rpx;font-size: 28rpx;text-align: center;}
.swText {
  color: #333;
  font-size: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-align: justify;
}