.bg{
  width: 100%;
  height: 100vh;
  background: #f1f1f1;
}
.topBg{
  height: 130rpx;
  width: 100%;
  background: #fff;
  position: relative;
}
.topBtn{
  width: 442rpx;
  height: 66rpx;
  background: #FFC645;
  border-radius: 33px;
  color: #333;
  text-align: center;
  line-height: 66rpx;
  font-weight: 500;
  position: absolute;
  top: 28rpx;
  left: 152rpx;
}
.contentBg{
  width: 100%;
  background: #f1f1f1;
  display: flex;
  flex-wrap: wrap;
  padding-left: 20rpx;
}
.blockBg{
  width: 350rpx;
  height: 442rpx;
  background: #fff;
  box-shadow: 0px 0px 16rpx 4rpx rgba(217, 216, 216, 0.5);
  border-radius: 16rpx;
  margin-top: 24rpx;
  margin-right: 12rpx;
}
.topImg{
  height: 268rpx;
  width: 100%;
  border-radius: 16rpx 16rpx 0 0;
}
.textB{
  width: 100%;
  height: 100rpx;
  padding-left: 30rpx;
  padding-top: 18rpx;
}
.textLine1{
  color: #333;
  font-size: 20rpx;
  font-weight: 500;
  line-height: 28rpx;
}
.textLine2{
  color: #333;
  font-size: 16rpx;
  font-weight: 500;
  line-height: 22rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp:3;
  -webkit-box-orient: vertical;
  word-break: break-all;
  width: 80%;
}
.textLine3{
  font-size: 14rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 0.68);
  line-height: 18rpx;
}
.mt6{
