/* pages/notice/notice.wxss */
page{
  background-color: #f2f2f2;
}
.main {position: relative;padding: 26rpx 36rpx;}
.list {
  padding: 32rpx 40rpx 56rpx 40rpx;
background: #FFFFFF;
box-shadow: 0px 0px 12px 0px rgba(217, 216, 216, 0.5);
border-radius: 12px;
margin-bottom: 20rpx;
}
.title {font-size: 28rpx;color: #333;
  white-space:nowrap; 
  text-overflow:ellipsis; 
  -o-text-overflow:ellipsis; 
  overflow: hidden;
  font-weight: 500;
}
.time {font-size: 20rpx;font-weight: 500;
  color: rgba(51, 51, 51, 0.42);
}
.text {
  font-size: 20rpx;
  text-align: justify;
  line-height: 28rpx;
}
.showText {
  display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
}